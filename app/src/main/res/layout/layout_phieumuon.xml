<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/maphieu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/thanhvien"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Thành viên: "
        android:textSize="26dp" />

    <TextView
        android:id="@+id/masach"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/maloai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/tienthue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/trangthai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/ngaythue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="26dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:id="@+id/suaPhieuMuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"/>
        <Button
            android:id="@+id/xoaPhieuMuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"/>
    </LinearLayout>
</LinearLayout>